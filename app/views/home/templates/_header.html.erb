<div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container">

            <a class="brand" href="#">
              blogr
            </a>
                                
            <form class="navbar-search pull-left" action="">
                <input class="search-query span2" type="text" placeholder="Search">
            </form>
            
            <ul class="nav pull-right">
                {[ if (authenticated()) { ]}
                    <li><a class="nav-to" data-bind="attr: { href: url_for( 'users', user_id() ) }">my profile</a></li>
                    <li><a class="nav-to" href="/auth/signout">sign out</a></li>
                {[ } else { ]}
                    <li class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">sign in<b class="caret"></b></a>
                        <form class="dropdown-menu auth-form">
                            <label>Username</label>
                            <input type="text" class="span2" data-bind="value: form_user_name">
                            <label>Password</label>
                            <input type="text" class="span2" data-bind="value: form_password">
                            <button class="btn btn-primary nav-to" data-bind="click: sign_in">sign in</button>
                        </form>
                    </li>
                    <li><a class="nav-to" href="/users/new">register</a></li>                    
                {[ } ]}
            </ul>
            
        </div>
    </div>
</div>