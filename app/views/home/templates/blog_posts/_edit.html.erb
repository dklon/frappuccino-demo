<form class="form-horizontal">
    <fieldset>
        <legend>Edit Post</legend>
        
        <div data-bind="formField: {
            field: 'title',
            label: 'Title',
            textarea: true
        }" />
        
        <div class="control-group">
            <label class="control-label" for="tags">tags</label>
            <div class="controls">
                <textarea class="input-xxlarge" data-bind="value: tags_content" />
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="screen_name">leader</label> 
            <div class="controls">
                <textarea class="input-xxlarge" data-bind="value: leader" />
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="bio">content</label> 
            <div class="controls">
                <textarea class="input-xxlarge content-large" data-bind="value: content" />
            </div>
        </div>
        <div class="form-actions">
            <button data-bind="click: submit_action( $data )" class="btn btn-primary">Save changes</button>
            <button class="btn nav-to" data-bind="attr: { href: url_for( $data ) }">Cancel</button>
        </div>
    </fieldset>
</form>
